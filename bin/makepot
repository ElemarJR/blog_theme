#!/bin/sh

# Go to project root
cd $(dirname "$0")/..

set -x

# Create a temporary directory with web/wp-includes in vendor/src/wp-includes to makepot works
mkdir -p vendor/src
cp -R web/wp-includes/ vendor/src/wp-includes/

mkdir -p $(pwd)/src/languages/
touch $(pwd)/src/languages/elemarjr.pot

# Run the makepot script
php vendor/wp/i18n-tools/makepot.php wp-theme $(pwd)/app/template/ $(pwd)/app/template/languages/elemarjr.pot

rm -rf vendor/src

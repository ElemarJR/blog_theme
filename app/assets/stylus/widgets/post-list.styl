.post-list
    $column-gutter = 50px
    display none
    flex-wrap wrap
    justify-content center

    &__empty
        font-size 24px
        margin 100px 0
        text-align center

    &--wrapper
        margin-right -10px

    &--loading
        margin-bottom $column-gutter
        text-align center

        &.animated
            position absolute
            width 100%

    &--loaded
        display flex

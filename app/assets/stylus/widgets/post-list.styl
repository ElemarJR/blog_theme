.post-list
    $column-gutter = 50px
    display none
    margin 0 auto

    @media screen and ( min-width $screen-md )
        clearfix()
        margin 0 auto

    &__empty
        font-size 24px
        margin 100px 0
        text-align center

    &--wrapper
        position relative

        @media screen and ( min-width $screen-md )
            margin-left '-%s' %  ( $column-gutter / 2 )
            width 'calc( 100% + %s )' % ( $column-gutter )

    &--loading
        margin-bottom $column-gutter
        text-align center

        &.animated
            position absolute
            width 100%

    &--loaded
        display flex
        flex-wrap wrap

    article
        margin 0 auto 35px
        max-width 414px

        &:hover
            transform scale( 1.1 )

        @media screen and ( min-width $screen-md )
            margin-bottom 70px
            padding 0 ( $column-gutter / 2 )
            width 50%

        @media screen and ( min-width $screen-lg )
            width 33.33%

        // In medium screen show 4 post, in another just 3
        /.home &
            &:last-child
                display none

                @media screen and ( min-width $screen-md )
                    display block

                @media screen and ( min-width $screen-lg )
                    display none

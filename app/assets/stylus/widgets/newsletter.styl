    label
        display: block;
        position: relative;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        
        input[type="checkbox"]
            position: absolute;
            opacity: 0;
            cursor: pointer;
        
        .checkmark
            position: absolute;
            top: 12.5px;
            right: 10px;
            height: 25px;
            width: 25px;
            background-color: transparent;
            border: 1px solid #fff

    div&--interest:hover
        background #92e1d5
        border 1px solid transparent
        
        span
            color $purple
        
        input ~ .checkmark
            border 1px solid $purple
        
    div&--interest input:checked ~ .checkmark
        background-color $purple
        border unset
    
    .checkmark:after
        content: "";
        position: absolute;
        display: none;
    
    div&--interest input:checked ~ .checkmark:after
        display block

    div .checkmark:after
        left: 9px;
        top: 1px;
        width: 9px;
        height: 18px;
        border: solid white;
        border-width: 0 2px 2px 0;
        -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        transform: rotate(45deg);

    .interes--selected
        background #b3eae2
        
        .newsletter--interest
            border unset
            
        .newsletter--interest > span
            color: $gray-dark
            
    .form--submit-wrapper
        text-align center
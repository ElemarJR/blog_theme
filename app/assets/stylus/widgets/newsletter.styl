.newsletter
    background $downy
    margin-top 50px
    padding-top 44px

    @media screen and ( min-width $screen-sm )
        padding-top 76px

    @media screen and ( min-width $screen-lg )
        padding-top 57px

    &--wrapper
        background $white
        padding-bottom 42px

        @media screen and ( min-width $screen-sm )
            padding-bottom 86px

    &--title
        color $purple
        font-size 27px
        line-height 1.63
        margin unset
        text-align center
        text-transform uppercase

        @media screen and ( min-width $screen-sm )
            font-size 32px
            line-height 1.66

        @media screen and ( min-width $screen-md )
          font-size 34px
          line-height 1.56

        @media screen and ( min-width $screen-lg )
          font-size 27px
          line-height 1.63

    &--subtitle
        font-size 23px
        // letter-spacing 2.3px
        line-height 1.22
        margin-bottom 16px
        margin-top 21px
        text-align center

        @media screen and ( min-width $screen-sm )
            font-size 30px
            margin 41px auto 52px auto
            width 400px

        @media screen and ( min-width $screen-md )
            font-size 32px
            line-height 1.13
            width 430px

        @media screen and ( min-width $screen-lg )
            font-size 27px
            line-height 1.63
            margin 16px auto 35px auto
            width 100%

    .form
        @media screen and ( min-width $screen-sm )
            padding 0 25px

        @media screen and ( min-width $screen-md )
            padding 0 45px

        @media screen and ( min-width $screen-lg )
            padding 0 219px

    input[type='text'],
    input[type='email']
        height 54px
        margin-bottom 6px
        text-align center

        @media screen and ( min-width $screen-sm )
            margin-bottom 11px

    &--col-6
        @media screen and ( min-width $screen-lg )
            display flex

        input[type='text']
            @media screen and ( min-width $screen-lg )
                    width calc(50% - 5px)

        .col-6
            @media screen and ( min-width $screen-lg )
                margin-right 10px

    &--divisortitle
        color $white
        font-size 15px
        font-weight normal
        line-height 1.67
        margin 27px 0
        text-align center
        text-transform uppercase

        @media screen and ( min-width $screen-sm )
            line-height 2.8
            margin 32px 0

        @media screen and ( min-width $screen-lg )
            margin 0 0 15px 0

    &--interest
        background-color transparent
        border 1px solid $white
        color $white
        height 54px
        margin-bottom 5px
        padding 0 10px
        width 100%

        input[type='checkbox']
            float right
            height 54px
        span
            font-size 15px
            letter-spacing 1.5px
            line-height 54px
            text-align left

    label
        cursor pointer
        display block
        height 54px
        position relative
        user-select none

        @media screen and ( min-width $screen-sm )
            margin-bottom 11px;

        @media screen and ( min-width $screen-lg )
            width calc(50% - 5px)

        &:first-child
            @media screen and ( min-width $screen-lg )
                margin-right 10px

        input[type='checkbox']
            cursor pointer
            opacity 0
            position absolute

        .checkmark
            background-color transparent
            border 1px solid $white
            height 15px
            position absolute
            right 15px
            top 20px
            width 15px

            @media screen and ( min-width $screen-sm )
                height 25px
                top 15px
                width 25px

            @media screen and ( min-width $screen-lg )
                height 16px
                top 20px
                width 16px

    &--interest
        &:hover
            background $morning-glory
            border 1px solid transparent

            span
                color $purple

            input
                ~ .checkmark
                    border 1px solid $purple

    &--interest
        input
            &:checked
                ~ .checkmark
                    background-color $purple
                    border unset

    .checkmark
        &:after
            content ''
            display none
            position absolute

    &--interest
        input
            &:checked
                ~ .checkmark
                    &:after
                        display block

    .checkmark
        &:after
            border solid $white
            border-width 0 1px 1px 0
            height 11px
            left 5px
            top 1px
            transform rotate(45deg)
            width 6px

            @media screen and ( min-width $screen-sm )
                height 17px
                left 8px
                top 2px
                width 9px

            @media screen and ( min-width $screen-lg )
                height 11px
                left 6px
                top 2px
                width 5px

    .interes--selected
        background $cruise

        .newsletter--interest
            border unset

        .newsletter--interest
            > span
                color $gray-dark

    &--check-validation-message
        color $red
        display none
        text-align center

    .form--submit-wrapper
        margin unset
        padding 42px 0
        text-align center

        @media screen and ( min-width $screen-sm )
            padding 76px 0

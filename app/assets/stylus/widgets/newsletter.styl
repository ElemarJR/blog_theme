.newsletter
    image-bg()
    background-color $dark-grey
    color $white
    padding 40px 0

    @media screen and ( min-width $screen-md )
        padding 50px 0

    @media screen and ( min-width $screen-lg )
        padding 55px 0

    &--title
        font-size 28px
        margin 0 0 25px
        text-transform uppercase
        text-align center

        @media screen and ( min-width $screen-md )
            margin-bottom 50px

    &--subtitle
        //

    &--inputs
        @media screen and ( min-width $screen-md )
            display flex
            flex-wrap wrap

            input:nth-child( 1 )
                margin-right 5px
                width calc( 50% - 5px )

            input:nth-child( 2 )
                margin-left 5px
                width calc( 50% - 5px )

        @media screen and ( min-width $screen-lg )
            input
                flex 1

            input:nth-child( 1 )
                margin 0

            input:nth-child( 2 )
                margin 0 40px

    &--actions
        margin-top 40px
        text-align center

        @media screen and ( min-width $screen-md )
            margin-top 72px

    input[type='text'],
    input[type='email']
        border none
        border-bottom 1px solid $white
        height 48px
        line-height 48px
        padding 0

        &::placeholder
            color $white
            opacity 1

    &--divisortitle
        margin 20px 0
        text-transform uppercase

        @media screen and ( min-width $screen-lg )
            margin 40px 0

    &--interest
        background-color transparent
        color $white
        height 22px
        line-height 22px
        margin-bottom 20px
        padding 0 0 0 20px
        width 100%

        input[type='checkbox']
            float right
        span
            text-align left

        &:hover
            .checkmark
                background $tiffany
                border-color $tiffany

            span
                color $tiffany
    &--options
        @media screen and ( min-width $screen-md )
            display flex
            flex-wrap wrap

        @media screen and ( min-width $screen-lg )
            flex-wrap no-wrap

    label
        cursor pointer
        display block
        margin-bottom 0
        position relative
        user-select none

        @media screen and ( min-width $screen-md )
            width 50%

        input[type='checkbox']
            cursor pointer
            opacity 0
            position absolute

        .checkmark
            background-color transparent
            border 1px solid $white
            height 12px
            left 0
            position absolute
            top 5px
            width 12px

    &--interest
        input
            &:checked
                ~ .checkmark
                    background-color $tiffany
                    border unset

    .checkmark
        &:after
            content ''
            display none
            position absolute

    &--interest
        input
            &:checked
                ~ .checkmark
                    &:after
                        display block

    .checkmark
        &:after
            border solid $black
            border-width 0 1px 1px 0
            height 8px
            left 4px
            top 1px
            transform rotate( 45deg )
            width 4px

    .interes--selected
        .newsletter--interest
            span
                color $tiffany

    &--check-validation-message
        color $red
        display none
        text-align center

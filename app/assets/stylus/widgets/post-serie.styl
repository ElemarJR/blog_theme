.post-serie
    background $gray-light-100
    margin 32px (- $container-padding) 0 (- $container-padding)
    padding 40px 30px
    
    @media screen and ( min-width $screen-md )
        margin 32px 0 0

    &--title
        color $black
        font-size 22px
        text-align center
        text-transform uppercase
        margin 0 0 30px 0
        
        @media screen and ( min-width $screen-md )
            font-size 14px

    &--list
        margin 0
        padding 0
        list-style none

    &--item
        display flex
        flex-direction column
        font-size 20px
        justify-content space-between
        margin-bottom 15px
        
        @media screen and ( min-width $screen-md )
            font-size 15px
            flex-direction row
        
        &__current
            font-weight bold

        &-date
            color $tiffany
            
            @media screen and ( min-width $screen-md )
                margin-right 60px
                width 110px

        &-title
            color $gray-dark 
            text-decoration none
            
            @media screen and ( min-width $screen-md )
                width calc( 100% - 170px )

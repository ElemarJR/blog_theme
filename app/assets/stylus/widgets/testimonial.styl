.testimonial
    margin 0 auto
    text-align center
    width 50%
    
    &--image

        img
            background $white
            border 1px solid $dusky-blue
            border-radius 50%
            display inline-block
            height 130px
            padding 5px
            width 130px

    &--content
        color $brownish-grey
        font-size 20px
        margin 0 auto

    &--footer
        align-items center
        display flex
        margin-top 20px
        justify-content center
    
    &--company
        margin-right 60px

    &--author
        text-align left
        p
            margin 0

            &:first-child
                color $brownish-grey
                font-size 12px
                font-weight 100
            &:last-child
                font-weight bold
                text-transform uppercase
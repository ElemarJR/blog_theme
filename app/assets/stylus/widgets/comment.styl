.comment
    border-bottom 1px solid $gray-light
    padding 40px 0

    a.comment-reply-link
        background $tiffany
        color $white
        display inline-block
        float right
        font-weight 700
        padding 8px
        text-transform uppercase

        &:hover
            background $red
            color $white
            text-decoration none

.comment-list
    list-style none
    padding 0

.comment-body
    &:after
        clear both
        content ''
        display block

    @media screen and ( min-width $screen-md )
        position relative

    @media screen and ( min-width $screen-lg )
        position static
        display flex

.comment-meta
    &:after
        clear both
        content ''
        display block

    @media screen and ( min-width $screen-lg )
        flex 0 0 150px

.comment-author
    .avatar
        border-radius 50%
        float left
        margin-right 20px

        @media screen and ( min-width $screen-lg )
            float none

    .fn
        @media screen and ( min-width $screen-lg )
            &:before
                content '\A'
                display block

.comment-content
    @media screen and ( min-width $screen-lg )
        flex-grow 2
        margin 0 40px

    p
        &:first-child
            @media screen and ( min-width $screen-lg )
                margin-top 0

.reply
    @media screen and ( min-width $screen-md )
        absolute top right

    @media screen and ( min-width $screen-md )
        position static

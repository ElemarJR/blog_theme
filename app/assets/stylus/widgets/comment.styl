a.comment-reply-link
    background $tiffany
    color $white
    display inline-block
    float right
    font-weight 700
    padding 8px
    text-transform uppercase

    &:hover
        background $red
        color $white
        text-decoration none

.comment-list
    padding 0

.comments-area
    margin-top 50px

    ol
        list-style none

    &--number
        font-weight 700
        letter-spacing 1.8px
        text-transform uppercase

.comment-body
    border-bottom 1px solid $gray-light
    padding 40px 0

    &:after
        clear both
        content ''
        display block

    @media screen and ( min-width $screen-md )
        position relative

    @media screen and ( min-width $screen-lg )
        position static
        display flex

.comment-meta
    &:after
        clear both
        content ''
        display block

    @media screen and ( min-width $screen-lg )
        flex 0 0 150px

.comment-author
    .avatar
        border-radius 50%
        float left
        margin-right 20px

        @media screen and ( min-width $screen-lg )
            float none

    .fn
        letter-spacing 1.8px

        @media screen and ( min-width $screen-lg )
            &:before
                content '\A'
                display block

.comment-content

    @media screen and ( min-width $screen-lg )
        flex-grow 2
        margin 0 40px

.reply
    font-size 10px
    padding 3px 9px

    @media screen and ( min-width $screen-md )
        absolute top right

    @media screen and ( min-width $screen-md )
        position static

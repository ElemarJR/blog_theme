// Hero Content
.hero
    bottom 0
    left 0
    position absolute
    right 0
    top 0

    &--wrapper
        height 100%
        position absolute
        top 0
        width 100%

    &--container
        bottom 116px // .scroll-button height + padding
        color $white
        max-width 'calc( 100% - %s )' % ( $container-padding * 2 )
        position absolute

        @media screen and ( min-width $screen-sm )
            bottom 180px

    &--title
        color $red
        margin 0
        text-transform uppercase

    &--description
        font-size 18px
        letter-spacing 1.8px
        line-height 32px
        margin 0
        text-transform none

    &--button
        margin 0

    ~/__home
        & ^[0]--title
            font-size 29px
            margin-bottom 45px
            max-width 690px

            @media screen and ( min-width $screen-sm )
                font-size 40px

        & ^[0]--description
            margin-bottom 60px
            max-width 450px

    ~/__blog
        text-transform uppercase

        & ^[0]--container
            width 440px

        & ^[0]--title
            @media screen and ( min-width $screen-sm )
                font-size 64px

        & ^[0]--subtitle
            font-size 44px
            font-weight 400
            line-height 1.1em
            margin-bottom 40px

            @media screen and ( min-width $screen-sm )
                font-size 70px
                margin 0 0 33px

    ~/__single
        & .listing-post__categories
            a
                font-size 18px

        & ^[0]--title
            color $white
            font-size 40px
            letter-spacing 4px
            margin-bottom 49px
            text-transform uppercase
            max-width 'calc( 100% - %s )' % ( $container-padding * 2 )

        & ^[0]--meta
            font-size 22px

            &--data
                align-items center
                display flex
                float left
                margin-top 10px

                @media screen and ( min-width $screen-md )
                    margin-right 60px

                &__reading
                    icon( i-time )

                &__comments
                    color $white
                    icon( i-comments )
                    text-decoration none

                    &:hover
                        color $red

                        &:before
                            color $red

                &:before
                    display inline-block
                    color $tiffany
                    font-size 40px
                    margin-right 16px

    ~/__about
        width 100%

        .typed-cursor
            animation flash 2s infinite
            color $white
            display none
            font-size 52px

            @media screen and ( min-width $screen-sm )
                display inline

        & ^[0]--container
            font-size 52px
            text-align center

            @media screen and ( min-width $screen-sm )
                font-size 50px
                max-width none
                width 100%

        & ^[0]--title
            color $white
            display inline-block
            font-size 50px
            font-weight 400

            strong
                color $tiffany
                font-weight 700
                white-space nowrap

// Hero Content
.hero
    &--wrapper
        align-items flex-end
        display flex
        height 100%
        padding-bottom 50px
        position fixed
        text-align center
        width 100%
        z-index 90

        @media screen and ( min-width $screen-md )
            padding-bottom 120px

    &--container
        color $white

    &--image
        height 100%
        left 0
        position absolute
        top 0
        width 100%

    &--title
        color $white
        font-size 32px
        font-weight 100
        margin 0

        @media screen and ( min-width $screen-md )
            font-size 58px
            padding 0 130px

    &--description
        font-size 12px
        letter-spacing 3px
        line-height 1.75
        margin 25px auto
        text-transform uppercase

        @media screen and ( min-width $screen-md )
            font-size 15px
            width 50%

    &--button
        margin 0

    ~/__home
        & ^[0]--wrapper
            @media screen and ( min-width $screen-lg )
                padding-bottom 70px

        & ^[0]--title
            strong
                display block

        & ^[0]--description
            width 70%

    ~/__page
        text-transform uppercase

        & ^[0]--container
            width 440px

        & ^[0]--title
            @media screen and ( min-width $screen-sm )
                font-size 64px

        & ^[0]--subtitle
            font-size 44px
            font-weight 400
            line-height 1.1em
            margin-bottom 40px

            @media screen and ( min-width $screen-sm )
                font-size 70px
                margin 0 0 33px

    ~/__events
        & ^[0]--container
            padding-left 40px
            padding-right 40px

        & ^[0]--title
            font-weight bold

    ~/__about
        width 100%

        .typed-cursor
            animation flash 2s infinite
            color $white
            display none
            font-size 52px

            @media screen and ( min-width $screen-sm )
                display inline

        & ^[0]--container
            font-size 52px
            text-align center

            @media screen and ( min-width $screen-sm )
                font-size 50px
                max-width none
                padding 0 160px
                width 100%

        & ^[0]--title
            color $white
            display inline
            font-size 50px
            font-weight 400

            @media screen and ( min-width $screen-sm )
                padding 0

            strong
                font-weight 700
                text-transform uppercase
                white-space nowrap

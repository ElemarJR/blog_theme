.gallery
    padding-bottom 60px
    padding-top 50px

    &--list
        display flex
        flex-wrap wrap
        margin 0 -5px

    &--item
        padding 0 5px

        img
            width 100%

        @media screen and ( min-width $screen-md )
            width 50%

        @media screen and ( min-width $screen-lg )
            width 33.3333%
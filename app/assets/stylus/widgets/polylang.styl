// Integration with Polylang plugin

// Menu
.site-header
    .main-navigation
        ul
            > .menu-item
                &.menu-item-object-page
                    border-bottom 1px solid $gray-light

                    @media screen and ( min-width $nav-breakpoint )
                        border-bottom 0

                &.lang-item
                    display inline-block

                    a
                        padding-right 0

                &.current-lang
                    a
                        color $red

.follow-us
    margin-bottom 15px

    &--menu
        list-style none
        margin 0
        padding 0

        .menu-item
            display inline-block
            font-size 16px
            margin 0 5px
            position relative

            a
                border 2px solid $white
                border-radius 50%
                color $white
                display block
                line-height 37px
                height 37px
                transition all .2s linear
                width 37px

                &:hover
                    border-color $pinkish-grey
                    color $pinkish-grey

            @media screen and ( min-width $screen-sm )
                font-size 24px
                a
                    line-height 45px
                    height 45px
                    width 45px

            @media screen and ( min-width $screen-md )
                font-size 30px
                a
                    line-height 55px
                    height 55px
                    width 55px

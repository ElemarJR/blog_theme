.category-nav
    ul
        list-style none
        margin 0
        padding 0 0 35px
        text-align center

        @media screen and ( min-width $screen-md )
            display flex
            flex-wrap wrap
            justify-content center

    .cat-item
        margin 20px 45px

        a
            color $black
            font-weight bold
            padding-bottom 3px
            text-decoration none
            text-transform uppercase

            ^[0..-2].current-cat ^[-1..-1] // @stylint ignore
            &:hover
                border-bottom 1px solid $red
                color $red

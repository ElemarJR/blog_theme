.category-nav
    margin-top 40px

    @media screen and ( min-width $screen-md )
        margin-top 60px

    ul
        font-size 12px
        list-style none
        margin 0 0 55px
        padding 0
        text-align center

        @media screen and ( min-width $screen-md )
            display flex
            flex-wrap wrap
            justify-content space-between

        @media screen and ( min-width $screen-lg )
            font-size 14px
            justify-content space-around

    .cat-item
        margin 20px 0

        @media screen and ( min-width $screen-md )
            margin 0

        a
            color $black
            font-weight bold
            padding-bottom 3px
            text-decoration none
            text-transform uppercase

            ^[0..-2].current-cat ^[-1..-1] // @stylint ignore
            &:hover
                border-bottom 1px solid $red
                color $red

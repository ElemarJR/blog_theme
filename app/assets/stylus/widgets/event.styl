.event
    color $black
    font-weight bold
    margin-bottom 10px
    padding 0 5px
    text-transform uppercase
    width 100%

    @media screen and ( min-width $screen-md )
        width 50%

    @media screen and ( min-width $screen-lg )
        width 33.333333%

    &--wrapper
        background $white
        padding 25px

    &--header
        align-items center
        display flex
        justify-content space-between
        min-height 58px

    &--image
        img
            height 100%
            max-height 54px
            width auto

    &--date
        font-size 20px

    &--content
        margin 10px 0 40px


    &--title
        font-size 16px
        margin 0
        min-height 44px

    &--role
        color $dusky-blue
        font-size 12px

    &--footer
        font-weight 100
        text-transform none

    &__active
        & ^[0]--wrapper
            background $dusky-blue
            color $white

        & ^[0]--role,
        & ^[0]--footer
            color $black

    &__old
        & ^[0]--date
        & ^[0]--title,
        & ^[0]--footer
            color $gray-light-300

        & ^[0]--role
            color $tiffany
.listing-post
    flex 1 1 100%
    position relative

    @media screen and ( min-width $screen-md )
        flex-basis 50%

    @media screen and ( min-width $screen-md )
        flex-basis 33.33%

    &__container
        margin 0 10px 10px 0
        min-height 280px
        position relative

        @media screen and ( min-width $screen-lg )
            min-height 310px

    &__bg
        background-position center
        background-repeat no-repeat
        background-size cover
        height 100%
        position absolute
        width 100%

    &__overlay
        background rgba( $black, .7 )
        bottom 0
        display flex
        flex-direction column
        height 160px
        justify-content center
        overflow hidden
        padding 20px 15px
        position absolute
        transition $transition-default
        width 100%

        ^[0]:hover &
            height 310px

    &__categories
        list-style none
        margin 0 0 10px
        padding 0

        li
            display inline-block

        a
            background $tiffany
            color $white
            display block
            font-size 12px
            font-weight bold
            padding 5px 20px
            text-decoration none
            text-transform uppercase


            &:hover
                background $red
                text-decoration none

    &__serie
        color $tiffany
        display block
        font-size 12px
        font-weight bold
        height 17px
        margin-bottom 8px
        text-decoration none
        text-transform uppercase

    &__title
        font-size 12px
        margin 0
        text-transform uppercase

        a
            -webkit-box-orient vertical
            -webkit-line-clamp 3
            color $white
            display block
            display -webkit-box // @stylint ignore
            height 50px
            overflow hidden
            text-decoration none
            text-overflow ellipsis

            &:hover
                color rgba( $white, .7 )
                text-decoration none

        @media screen and ( min-width $screen-md )
            font-size 14px

            a
                height 58px


    &__footer
        color $tiffany
        height 0
        overflow hidden
        transition all $transition-default

        &__right
            float right
            font-size 12px
            letter-spacing 1.2px

        i
            font-size 20px
            margin-left 3px

        .has-touch &
            height auto
            margin-top 2rem
            visibility visible

        ^[0]:hover &
            height 35px
            margin-top 2rem

    &--date
        display inline-block
        letter-spacing 1.6px

    &--reading
    &--comments
        align-items center
        display flex
        float left
        height 23px
        margin-left 11px

    a&--comments
        color $tiffany
        text-decoration none

        &:hover
            color $red
            text-decoration none


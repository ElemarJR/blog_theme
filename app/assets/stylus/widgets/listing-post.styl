.listing-post
    &__thumbnail
        margin-bottom 27px

        img
            width 100%

    &__categories
        list-style none
        margin 0 0 24px
        padding 0

        li
            display inline-block
            margin-bottom 5px

        a
            background $tiffany
            color $white
            display block
            font-size 10px
            font-weight bold
            padding 3px 16px
            text-decoration none
            text-transform uppercase

            &:hover
                background $red
                text-decoration none

    h2&__title
        font-size 17px
        letter-spacing 1.7px
        line-height 1.41
        text-transform uppercase

        a
            color $gray-dark
            text-decoration none

            &:hover
                color $tiffany
                text-decoration none

    &__content
        p
            margin 0 0 37px

    &__footer
        color $tiffany

        &__right
            float right
            font-size 12px
            letter-spacing 1.2px

        i
            font-size 20px
            margin-left 3px

    &--date
        display inline-block
        letter-spacing 1.6px

    &--reading
    &--comments
        align-items center
        display flex
        float left
        height 23px
        margin-left 11px

    a&--comments
        color $tiffany
        text-decoration none

        &:hover
            color $red
            text-decoration none

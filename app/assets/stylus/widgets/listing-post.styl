.listing-post
    min-height 308px
    position relative
    
    &:hover
        .listing-post__footer
            height 35px
            visibility visible
        .listing-post__overlay
            height 100%

    &__container
        min-height 308px
        position relative
        
    &__bg
        background-size cover
        background-repeat no-repeat
        background-position center
        height 100%
        position absolute
        width 100%
        
    &__overlay
        background rgba(#000, .6)
        bottom 0
        display flex
        flex-direction column
        height auto
        justify-content center
        padding 30px
        position absolute
        width 100%
        transition $transition-default
        
    &__categories
        list-style none
        margin 0 0 10px
        padding 0

        li
            display inline-block

        a
            background $tiffany
            color $white
            display block
            font-size 11px
            font-weight bold
            padding 6px 18px
            text-decoration none
            text-transform uppercase

            &:hover
                background $red
                text-decoration none

    &__serie
        height 16px
        color $tiffany
        display block
        font-size 11px
        font-weight bold
        text-decoration none
        text-transform uppercase

    h2&__title
        font-size 16px
        margin 0
        text-transform uppercase
        
        a
            color $white
            text-decoration none
            
            display block
            display -webkit-box
            height 42px
            overflow hidden
            -webkit-line-clamp 2
            -webkit-box-orient vertical

            &:hover
                color rgba($white, .7)
                text-decoration none

    &__footer
        color $tiffany
        height 0
        margin-top 2rem
        visibility hidden
        transition $transition-default

        &__right
            float right
            font-size 12px
            letter-spacing 1.2px

        i
            font-size 20px
            margin-left 3px

    &--date
        display inline-block
        letter-spacing 1.6px

    &--reading
    &--comments
        align-items center
        display flex
        float left
        height 23px
        margin-left 11px

    a&--comments
        color $tiffany
        text-decoration none

        &:hover
            color $red
            text-decoration none

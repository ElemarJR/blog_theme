.listing-post
    &__thumbnail
        margin-bottom 30px

    &__categories
        list-style none
        margin 0 0 25px
        padding 0

        li
            display inline-block

        a
            background $tiffany
            color $white
            display block
            font-size 14px
            font-weight bold
            padding 5px 15px
            text-decoration none
            text-transform uppercase

            &:hover
                background $red

    &__title
        font-size 18px
        line-height 1em
        text-transform uppercase

        a
            color $gray-dark
            text-decoration none

            &:hover
                color $tiffany

    &__footer
        color $tiffany

        &__right
            float right

        i
            font-size 28px

        span
            vertical-align super

    &__date
        display inline-block

    &__comments
        color $tiffany
        text-decoration none

        &:hover
            color $red

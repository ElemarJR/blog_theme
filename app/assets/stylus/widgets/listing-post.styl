.listing-post
    &__thumbnail
        margin-bottom 30px

        img
            width 100%

    &__categories
        list-style none
        margin 0 0 25px
        padding 0

        li
            display inline-block
            margin-bottom 5px

        a
            background $tiffany
            color $white
            display block
            font-size 14px
            font-weight bold
            padding 3px 15px
            text-decoration none
            text-transform uppercase

            &:hover
                background $red
                text-decoration none

    h2&__title
        font-size 18px
        line-height 1.2em
        text-transform uppercase

        a
            color $gray-dark
            text-decoration none

            &:hover
                color $tiffany
                text-decoration none

    &__content
        p
            margin 35px 0

    &__footer
        color $tiffany

        &__right
            float right

        i
            font-size 28px

        span
            vertical-align super

    &__date
        display inline-block
        line-height 31px

    a&__comments
        color $tiffany
        text-decoration none

        &:hover
            color $red
            text-decoration none

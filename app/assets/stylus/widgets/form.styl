input[type=text],
input[type=url],
input[type=tel],
input[type=email],
input[type=search],
input[type=number],
input[type=range],
select,
textarea
    background-color transparent
    border none
    border-bottom 1px solid $input-border-color
    box-sizing border-box
    color $input-text-color
    display block
    height 37px
    padding 0
    width 100%


.posts-nav-link
    display flex
    justify-content space-between
    margin-top 32px
    position relative

    a
        text-decoration none

    &--next,
    &--previous
        align-items flex-start
        display flex
        width 45%

    &--info
        display none
        font-weight bold

        @media screen and ( min-width $screen-md )
            display block

    &--img
        display none
        width 92px

        @media screen and ( min-width $screen-md )
            display block

    &--thumb
        display flex
        flex-basis 92px
        flex-grow 0
        flex-shrink 0
        height 2px
        margin-right 20px
        position relative

        @media screen and ( min-width $screen-sm )
            height auto

    &--cursor
        margin 0 0 8px

        a
            color $brownish-grey

    &--title
        margin 0 0 8px
        text-transform uppercase

        a
            color $black

    &--next
        justify-content flex-end
        text-align right

        & ^[0]--thumb
            margin 0 0 0 20px

    .link-next,
    .link-previous
        color $brownish-grey
        font-weight bold
        position absolute
        text-decoration none
        top 50%
        transform translateY( -50% )

        i
            vertical-align middle

        @media screen and ( min-width $screen-md )
            span
                display none

    .link-previous
        @media screen and ( min-width $screen-md )
            left -20px

        @media screen and ( min-width $screen-lg )
            left -45px

    .link-next
        right 0

        @media screen and ( min-width $screen-md )
            right -20px

        @media screen and ( min-width $screen-lg )
            right -45px

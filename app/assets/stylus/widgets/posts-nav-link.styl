.posts-nav-link
    display flex
    justify-content space-between
    margin-top 32px
    position relative

    &--next,
    &--previous
        align-items flex-start
        display flex
        width 45%

    &--info
        display none
        font-weight bold

        @media screen and ( min-width $screen-md )
            display block

    &--img
        display none
        width 92px

        @media screen and ( min-width $screen-md )
            display block

    &--thumb
        background purple
        display flex
        flex-basis 92px
        flex-grow 0
        flex-shrink 0
        margin-right 20px
        position relative

    &--cursor
        color $brownish-grey
        margin 0 0 8px

    &--title
        color $black
        margin 0 0 8px
        text-transform uppercase

    &--next
        justify-content flex-end
        text-align right

        & ^[0]--thumb
            margin 0 0 0 20px

    .link-next,
    .link-previous
        color $brownish-grey
        font-weight bold
        position absolute
        text-decoration none
        top 50%
        transform translateY( -50% )

        i
            vertical-align middle

        @media screen and ( min-width $screen-md )
            span
                display none

    .link-previous
        @media screen and ( min-width $screen-md )
            left -25px

        @media screen and ( min-width $screen-lg )
            left -45px

    .link-next
        right 0

        @media screen and ( min-width $screen-md )
            right -25px

        @media screen and ( min-width $screen-lg )
            right -45px

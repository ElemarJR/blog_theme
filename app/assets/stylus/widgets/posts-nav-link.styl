.posts-nav-link
    display flex
    justify-content space-between
    position relative
    margin-top 32px
    
    &--next,
    &--previous
        display flex
        font-weight bold
        text-decoration none
        max-width 40%
    
    &--img
        margin-right 20px
        
    &--title
        color $black
        margin 0 0 8px
        text-transform uppercase
        
    &--next
        text-align right
        & ^[0]--img
            margin 0 0 0 22px

    &--cursor
        color $gray
        margin 0

    .link-next,
    .link-previous
        position absolute
        top 50%
        display none

.button
input[type="submit"]
    $height = 56px
    background $red
    border-radius $height
    color $white
    display inline-block
    font-weight bold
    line-height $height
    padding 0 50px
    text-decoration none
    text-transform uppercase

.button__bordered
    background transparent
    border 1px solid $white

    &:hover
        color $red
        border-color $red
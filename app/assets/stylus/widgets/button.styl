.button,
a.button,
input[type='submit'].button
    $height = 45px
    background $white
    border 1px solid $black
    color $black
    display inline-block
    font-weight bold
    line-height $height
    padding 0 10px
    text-decoration none
    text-transform uppercase
    transition all $transition-default

    @media screen and ( min-width $screen-md )
        padding 0 30px

    &:hover
        background $black
        color $white
        text-decoration none

    &__bordered
        background transparent
        border 1px solid $black

        &:hover
            background $black
            color $white

    &__transparent
        background transparent
        color $black

    &__tiffany
        background $pinkish-grey
        border none

        &:hover
            background-color $white
            border-color $pinkish-grey
            color $pinkish-grey

    &__white
        background transparent
        border-color $white
        color $white

        &:hover
            background $white
            color $black

    &--icon
        margin-left 5px

a.button,
input[type='submit'].button
    $height = 45px
    background $white
    border 1px solid $black
    color $black
    display inline-block
    font-weight bold
    line-height $height
    padding 0 50px
    text-decoration none
    text-transform uppercase
    transition all $transition-default

    &:hover
        background $black
        color $white
        text-decoration none

    &__bordered
        background transparent
        border 1px solid $white

        &:hover
            background $white
            color $red
            
    &__transparent
        background transparent
        border-color transparent
        color $black

    &__tiffany
        background $tiffany
        border none

        &:hover
            background-color $white
            border-color $tiffany
            color $tiffany

    &__white
        background transparent
        border-color $white
        color $white

        &:hover
            background $white
            color $black

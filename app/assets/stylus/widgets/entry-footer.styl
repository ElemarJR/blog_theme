.single
    .hentry
        .entry-footer
            border-bottom 1px solid $gray
            border-top 1px solid $gray
            line-height 36px
            padding 20px 0

            &:after
                clear both
                content ''
                display block
                height 0
                width 0

            @media screen and ( min-width $screen-md )
                padding 40px 0

            strong
                display inline-block
                margin-right 25px
                text-transform uppercase

            a
                color $gray
                display inline-block
                margin-right 33px
                text-decoration none

                &:hover
                    color $red

            &--tags
                margin-bottom 20px

                @media screen and ( min-width $screen-md )
                    width calc( 100% - 310px )
                    float left
                    margin-bottom 0


            &--share
                @media screen and ( min-width $screen-md )
                    float right

                a
                    font-size 36px
                    vertical-align middle
.post
    &--content
        color $black
        font-size 20px
        margin 0 auto 40px
        max-width 100%
        
        h2
            font-size 30px
        
    &--title
        font-size 42px
        line-height 50px
        text-transform uppercase
        width 100%
        margin 0
        
        @media screen and ( min-width $screen-md )
            width 75%

        a
            color $black
            text-decoration none
            
    &--image
        height 440px
        margin 35px 0 30px
        position static
        
    &--main
        display flex
        flex-direction column
        
        @media screen and ( min-width $screen-md )
            flex-direction row
        
    .listing-post__serie
        font-size 22px
        margin-top 20px
        margin-bottom 15px
        height auto
        
        @media screen and ( min-width $screen-md )
            font-size 14px
        
.front-page
    &--purpose
        $column-gutter = 25px
        padding-bottom 40px
        padding-top 40px

        &--wrapper
            @media screen and ( min-width $screen-md )
                align-items strech
                display flex
                margin-left '-%s' %  ( $column-gutter / 2 )
                width 'calc( 100% + %s )' % ( $column-gutter )

        &--item
            border 1px solid $gray-light
            color $gray
            height 100%
            padding 30px
            text-align center

            strong
                color $red

            &:first-child
                margin-bottom 20px

                @media screen and ( min-width $screen-md )
                    margin-bottom 0

            &--wrapper
                @media screen and ( min-width $screen-md )
                    padding 0 ( $column-gutter / 2 )
                    width 50%

            &:hover
                box-shadow 0 0 10px 2px $gray-light

                & ^[0..1]--icon
                    background $red
                    color $white

    &--quote
        background $quote-bg
        color $white
        font-size 24px
        font-weight 700
        line-height 1.5em
        text-align center
        width 100vw

        &--container
            $icon-size = 26px
            $x-space = 20px
            $y-space = 60px
            display inline-block
            padding 70px 55px
            position relative
            width 615px

            &:before
                icon-font()
                content i-left-quote
                font-size $icon-size
                left $x-space
                position absolute
                top $y-space

            &:after
                icon-font()
                bottom $y-space
                content i-right-quote
                font-size $icon-size
                position absolute
                right $x-space

    &--blog
        padding-bottom 50px
        margin-top 50px

        &--header
        &--footer
            text-align center

        &--title
            font-size 36px
            text-transform uppercase

        p&--description
            margin-bottom 60px

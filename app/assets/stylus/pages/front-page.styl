.front-page

    &--purpose
        display flex
        padding 60px 0

        &-image
            padding-left 40px
            text-align center
            width 50%

            img
                displat inline-block
                width 70%
            
        &-content
            width 50%
        
        &-title
            color $dark-grey
            font-size 32px
            font-weight 100
            text-transform uppercase
            margin-bottom 75px

    &--quote
        background $quote-bg
        color $white
        font-size 23px
        font-weight 700
        letter-spacing 2.3px
        line-height 1.52
        text-align center
        width 100vw

        &--container
            $icon-size = 26px
            $x-space = 20px
            $y-space = 100px
            display inline-block
            max-width 695px
            padding 110px 55px
            position relative

            &:before
                icon-font()
                color $quote-quotes
                content i-left-quote
                font-size $icon-size
                left $x-space
                position absolute
                top $y-space

            &:after
                icon-font()
                bottom $y-space
                color $quote-quotes
                content i-right-quote
                font-size $icon-size
                position absolute
                right $x-space

    &--blog
        margin-top 117px
        padding-bottom 88px

        &--header
        &--footer
            text-align center

        &--title
            font-size 50px
            letter-spacing .6px
            text-transform uppercase

        p&--description
            font-size 15px
            margin-bottom 62px

.purpose
    display flex
    margin-bottom 25px
    width 80%

    &--title
        color $black
        font-size 16px
        font-weight bold
        margin-bottom 10px

    &--content
        color $gray
        
    &--icon
        font-size 40px
        margin-right 35px

        i::before
            color $black
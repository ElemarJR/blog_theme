.front-page
    // Purpose
    &--purpose
        display flex
        flex-direction column
        padding-top 60px
        padding-bottom 60px
        position relative

        &-image
            position absolute
            top 60px
            right 20px
            width 180px

            img
                displat inline-block
            
        &-content
            width 100%
        
        &-title
            color $dark-grey
            font-size 32px
            font-weight 100
            text-transform uppercase
            margin-bottom 75px
            position relative
            z-index 5
            
            b
                display block

        @media screen and ( min-width $screen-md )
            flex-direction row
            
            &-content
                width 50%

            &-image
                top 50%
                transform translateY( -50% )
                width 50%

                img
                    max-width 90%

            &-title b
                display inline

        @media screen and ( min-width $screen-lg )
            &-image
                transform none
                position static
                padding-right 40px

                img
                    max-width 70%

    &--quote
        background $quote-bg
        color $white
        font-size 23px
        font-weight 700
        letter-spacing 2.3px
        line-height 1.52
        text-align center
        width 100vw

        &--container
            $icon-size = 26px
            $x-space = 20px
            $y-space = 100px
            display inline-block
            max-width 695px
            padding 110px 55px
            position relative

            &:before
                icon-font()
                color $quote-quotes
                content i-left-quote
                font-size $icon-size
                left $x-space
                position absolute
                top $y-space

            &:after
                icon-font()
                bottom $y-space
                color $quote-quotes
                content i-right-quote
                font-size $icon-size
                position absolute
                right $x-space

    &--blog
        padding 60px 0
        background $white-two

        &-description
            color $black
            font-weight bold
            text-align center
            text-transform uppercase
            
        &-title
            color $black
            font-weight 100
            text-align center
            text-transform uppercase

            h2
                border-bottom 1px solid $dusky-blue
                display inline-block
                font-size 32px
                margin 0 0 20px
                padding-bottom 20px

        &-list
            margin-bottom 60px

            .listing-post:last-child
                display none
                
                @media screen and ( min-width $screen-lg )
                    display block
            
        &-actions
            margin-top 40px
            text-align center

    &--testimonial
        padding-bottom 60px
        padding-top 60px

        &-title
            color $black
            font-size 14px
            text-align center
            margin 0 0 70px
            text-transform uppercase
    
        .swiper-counter
            color $brownish-grey
            text-align center

        .swiper-button-next,
        .swiper-button-prev
            background-size contain
            height 15px
            width 8px

// Purpose
.purpose
    display flex
    margin-bottom 25px
    width 80%

    &--title
        color $black
        font-size 16px
        font-weight bold
        margin-bottom 10px

    &--content
        color $gray
        
    &--icon
        font-size 40px
        margin-right 35px

        i::before
            color $black
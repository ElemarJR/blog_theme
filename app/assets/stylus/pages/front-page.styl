.front-page
    // Purpose
    &--purpose
        display flex
        flex-direction column
        padding-bottom 70px
        padding-top 60px
        position relative

        &-image
            position absolute
            right 0
            top 60px
            width 180px

            img
                display inline-block

        &-content
            width 100%

        &-title
            color $dark-grey
            font-size 32px
            font-weight 100
            text-transform uppercase
            margin-bottom 75px
            position relative
            z-index 5

            b
                display block

        @media screen and ( min-width $screen-md )
            flex-direction row

            &-content
                width 50%

            &-image
                right 20px
                top 50%
                transform translateY( -50% )
                width 50%

                img
                    max-width 90%

            &-title b
                display inline

        @media screen and ( min-width $screen-lg )
            &-image
                padding-right 40px
                position static
                transform none

                img
                    max-width 70%

    &--quote
        background-color $quote-bg
        background-position center
        background-repeat repeat
        background-size cover
        color $white
        padding 60px 0 30px

        @media screen and ( min-width $screen-md )
            padding 120px 0 75px

        &-author
            border-top 1px solid $white
            display inline-block
            font-size 14px
            font-weight bold
            margin-top 15px

            @media screen and ( min-width $screen-md )
                border-top none
                display block
                margin-top 45px

        &-icon
            display block
            font-size 2rem
            position relative
            z-index 2

        &-content
            font-size 20px
            line-height 32px;
            margin 0 auto
            max-width 80%
            position relative

            &::before
                background-image url( '../images/quote.png' )
                background-repeat no-repeat
                background-size cover
                content ""
                left -2.5%
                height 99px
                position absolute
                top 5%
                width 154px

                @media screen and ( min-width $screen-md )
                    height 167px
                    left -19%
                    top -6%
                    width 259px

                @media screen and ( min-width $screen-lg )
                    left -25%
                    top -20%

            @media screen and ( min-width $screen-md )
                max-width 500px

    &--blog
        background $white-two
        padding 60px 0

        &-description
            color $black
            font-weight bold
            text-align center
            text-transform uppercase

        &-title
            color $black
            font-weight 100
            text-align center
            text-transform uppercase

            h2
                border-bottom 1px solid $dusky-blue
                display inline-block
                font-size 32px
                margin 0 0 20px
                padding-bottom 20px

        &-list
            position relative

            &:after
                background $dusky-blue
                bottom -20px
                content ''
                height 1px
                left 50%
                position absolute
                transform translateX( -50% )
                width 65px

            &:last-child:after
                display none

            @media screen and ( min-width $screen-md )
                margin-bottom 60px

            .listing-post:last-child
                display none

                @media screen and ( min-width $screen-lg )
                    display block

        &-actions
            margin-top 40px
            text-align center

    &--testimonial
        padding-bottom 60px
        padding-top 60px
        position relative

        .swiper-pagination
            color $brownish-grey
            text-align center

        .swiper-pagination-fraction
            bottom 30px

        .swiper-button-next,
        .swiper-button-prev
            background url( 'data:image/png;base64,' )
            height 22px
            width 12px

        .swiper-button-prev
            transform rotate( -180deg )
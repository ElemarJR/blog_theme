.front-page
    // Purpose
    &--purpose
        display flex
        flex-direction column
        padding-bottom 70px
        padding-top 60px
        position relative

        &-image
            position absolute
            right 0
            top 60px
            width 180px

            img
                display inline-block

        &-content
            font-size 16px
            line-height 1.75
            width 100%

        &-title
            color $dark-grey
            font-size 32px
            font-weight 100
            text-transform uppercase
            margin-bottom 75px
            position relative
            z-index 5

            b
                display block

        @media screen and ( min-width $screen-md )
            flex-direction row

            &-content
                width 50%

            &-image
                right 20px
                top 50%
                transform translateY( -50% )
                width 50%

                img
                    max-width 90%

            &-title b
                display inline

        @media screen and ( min-width $screen-lg )
            &-image
                padding-right 40px
                position static
                transform none

    &--quote
        background-color $quote-bg
        background-position center
        background-repeat repeat
        background-size cover
        color $white
        padding 60px 0 30px

        @media screen and ( min-width $screen-md )
            padding 120px 0 75px

        &-author
            border-top 1px solid $white
            display inline-block
            font-size 14px
            font-weight bold
            margin-top 15px
            padding-top 15px

        &-icon
            display block
            font-size 2rem
            position relative
            z-index 2

        &-content
            font-size 20px
            letter-spacing 2px
            line-height 32px;
            margin 0 auto
            max-width 80%
            position relative
            z-index 0

            &::before
                background-image url( '../images/quote.png' )
                background-repeat no-repeat
                background-size cover
                content ''
                height 99px
                left -2.5%
                position absolute
                top 5%
                width 154px
                z-index -1

                @media screen and ( min-width $screen-md )
                    height 167px
                    left -19%
                    top -6%
                    width 259px

                @media screen and ( min-width $screen-lg )
                    left -25%
                    top -20%

            @media screen and ( min-width $screen-md )
                max-width 500px

    &--blog
        background $white-two
        padding 50px 0

        &-title
            color $black
            display inline-block
            font-size 32px
            font-weight 300
            letter-spacing 3px
            margin 0 0 40px
            position relative
            text-align center
            text-transform uppercase
            width 100%

            &:after
                border-bottom 1px solid $dusky-blue
                bottom -20px
                content ''
                left 0
                margin-left auto
                margin-right auto
                position absolute
                right 0
                width 40px

        &-description
            color $black
            font-weight bold
            letter-spacing 2px
            margin 0 0 30px
            text-align center
            text-transform uppercase

        &-list
            margin-bottom 35px
            position relative

            &:last-child
                margin-bottom 0
                padding-bottom 0

                &:after
                    display none

            .listing-post:last-child
                display none

                @media screen and ( min-width $screen-md )
                    display block

                @media screen and ( min-width $screen-lg )
                    display none

        &-actions
            margin-top 25px
            text-align center

    &--testimonial
        max-width 680px
        padding-bottom 60px
        padding-top 60px
        position relative

        @media screen and ( min-width $screen-lg )
            max-width $screen-lg

        .swiper-pagination
            color $brownish-grey
            text-align center

        .swiper-pagination-fraction
            bottom 30px

        .swiper-button-next,
        .swiper-button-prev
            background url( 'data:image/png;base64,' )
            height 22px
            left 0
            width 12px

        .swiper-button-next
            left auto
            right 0

        .swiper-button-prev
            transform rotate( -180deg )
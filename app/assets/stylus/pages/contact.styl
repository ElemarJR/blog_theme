.contact
    color $black
    padding-bottom 70px
    text-align center

    &--subtitle
        color $black
        font-weight bold
        margin 0 auto 10px
        max-width 485px
        text-transform uppercase

    &--description
        margin 0 auto 60px
        max-width 900px

    .form
        input,
        textarea
            border-color $black

            &::placeholder
                color $black
                text-transform lowercase

    &--form
        margin 0 auto
        max-width 900px

        @media screen and ( min-width $screen-md )
            display flex
            flex-wrap wrap

            label
                margin-bottom 8px
                width 100%

            label:nth-child( 1 )
                margin-right 10px
                width calc( 50% - 10px )

            label:nth-child( 2 )
                width 50%

            input[type="text"],
            textarea
                color $black

            .form--submit-wrapper
                text-align center
                width 100%

.page-template-contact
    &,
    .site-content
        background $white-two

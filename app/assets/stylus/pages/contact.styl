.contact
    color $white
    position relative

    a
        color $white

    .site
        position relative
        z-index 1

    .site-content
        background-attachment fixed
        background-color $purple
        background-position center bottom

    &--container
        max-width 700px
        padding-bottom 50px

    h2&--title
        color $red
        font-size 40px
        letter-spacing .5px
        margin 66px 0 31px
        text-transform uppercase

    &--description
        font-size 15px
        line-height 1.8em
        margin-bottom 39px
        max-width 403px

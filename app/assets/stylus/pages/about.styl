.about
    &--row
        padding 50px 0

        @media screen and ( min-width $screen-md )
            padding 70px 0

        ul
            padding-left 20px

        li
            font-weight bold
            margin-bottom 10px

        &--container
            @media screen and ( min-width $screen-md )
                align-items center
                display flex
                justify-content space-between

        &--content
            margin-bottom 40px

            @media screen and ( min-width $screen-md )
                flex 0 0 340px

            @media screen and ( min-width $screen-lg )
                flex-basis 470px

        &--text
            line-height 28px
            
        &--title
            font-size 32px
            margin-top 0
            text-transform uppercase

        &--image
            text-align center

            @media screen and ( min-width $screen-md )
                margin-left 40px

            @media screen and ( min-width $screen-lg )
                flex 0 0 640px

            img
                @media screen and ( min-width $screen-sm )
                    max-width 400px

                @media screen and ( min-width $screen-md )
                    max-width 100%

        &__light
            background $white-two

        &__dark
            color $white
            background $dark-grey

        &__dusky
            color $white
            background $dusky-blue

        &__invert
            & ^[0..-2]--content
                @media screen and ( min-width $screen-md )
                    order 2

            & ^[0..-2]--image
                @media screen and ( min-width $screen-md )
                    margin-left 0
                    margin-right 40px

// All style of elements that is above the fold
@import 'nib'
@import 'variables'
@import 'mixins/*'
@import '../font-icon/variables'

normalize-css()

// General CSS
*
*:before
*:after
    box-sizing border-box
    transition all .2s linear

body
    color $gray-dark
    font-family $sans-serif
    font-weight 300
    overflow-x hidden
    padding-top $sm-nav-height

    @media screen and ( min-width $nav-breakpoint )
        padding-top $sm-nav-height-breakpoint

img
    height auto
    max-width 100%

button
    background none
    border 0

// Helper classes

// Container to center the element in the page on large screens. In minor
// screens the element is full width.
.container
    margin-left auto
    margin-right auto
    max-width 100%
    padding-left $container-padding
    padding-right $container-padding
    width 100vw

    &.full
        padding 0

    @media screen and ( min-width $screen-lg )
        padding-left 0
        padding-right 0
        width $screen-lg

// Hide screen reader element until load the CSS file
.screen-reader-text
    display none

// WOWJS integration
.wow
    visibility hidden

// Header
.site-header
    background-color $purple
    background-size cover
    height 100vh
    margin-top '-%s' % $sm-nav-height
    padding-top $sm-nav-height

    @media screen and ( min-width $nav-breakpoint )
        margin-top '-%s' % $sm-nav-height-breakpoint
        padding-top $sm-nav-height-breakpoint
        min-height auto

    /.single-post &
        position relative

        &:before
            background $header-overlay
            bottom 0
            content ''
            height 100%
            left 0
            position absolute
            right 0
            top 0
            width 100%

    /.top-header-wrapper
        border-bottom 1px solid rgba( $white, .7 )
        height $sm-nav-height
        fixed top left
        width 100%
        z-index 99

        @media screen and ( min-width $nav-breakpoint )
            height $sm-nav-height-breakpoint

    .top-header
        position relative
        z-index 9999

    .site-branding
        position absolute
        top 18px
        width 140px

        @media screen and ( min-width $nav-breakpoint )
            float left
            height 70px
            left 0
            margin-top 18px
            position static
            width 180px

    /.header-right
        @media screen and ( min-width $nav-breakpoint )
            display flex
            float right
            max-width calc( 100% - 200px )
            padding-top 38px

    /.header-toogle-button
        color $white
        cursor pointer
        position absolute

        /.toggled ^[1..-1]
            color $red

    .site-search
        @media screen and ( min-width $nav-breakpoint )
            display flex
            margin-right 40px

        /.search-toggle
            background transparent
            border 0
            font-size 26px
            icon( i-search )
            right 83px
            top 33px

            @media screen and ( min-width $nav-breakpoint )
                padding-top 3px
                position static

        .search-form
            display none

            ~/ .toggled ^[2..-1]
                display flex

    .main-navigation
        /.menu-toggle
            background-color transparent
            border 0
            font-size 46px
            icon( i-menu )
            padding 0
            right 20px
            top 22px

            @media screen and ( min-width $nav-breakpoint )
                display none

        div
            background $white
            display none
            left 0
            position absolute
            top $sm-nav-height
            width 100%
            z-index 999

            @media screen and ( min-width $nav-breakpoint )
                background transparent
                border-left 1px solid $white
                display flex
                height 30px
                padding-left 20px
                position static

            ~/ .toggled ^[2..-1]
                display block

        ul
            list-style none
            margin 0
            padding 0
            width 100%

            @media screen and ( min-width $nav-breakpoint )
                width auto

            > .menu-item
                display block
                line-height 47px
                text-transform uppercase

                @media screen and ( min-width $nav-breakpoint )
                    display inline-block
                    font-size 16px
                    line-height 30px
                    padding 0 20px
                    position relative

                &:last-child
                    @media screen and ( min-width $nav-breakpoint )
                        padding-right 0

                a
                    color $gray-dark
                    display block
                    font-size 16px
                    font-weight bold
                    padding 0 30px
                    text-decoration none
                    width 100%

                    @media screen and ( min-width $nav-breakpoint )
                        color $white
                        display inline-block
                        padding 0
                        text-decoration none
                        width auto

                    ^[0..-2].current-menu-item ^[-1..-1] // @stylint ignore
                    &:hover
                        color $red

    &__no-hero
        height auto

        &:before
            content none

// Hero Content
.hero
    bottom 0
    left 0
    position absolute
    right 0
    top 0

    &--wrapper
        height 100%
        position absolute
        top 0
        width 100%

    &--container
        bottom 116px // .scroll-button height + padding
        color $white
        max-width 'calc( 100% - %s )' % ( $container-padding * 2 )
        position absolute

    &--title
        color $red
        margin 0
        text-transform uppercase

    &--description
        font-size 22px
        margin 0
        text-transform none

    &--button
        margin 0

    &--scroll-button
        color $white
        font-size 56px
        left 50%
        padding 30px
        position absolute
        bottom 0
        transform translateX( -50% )

        &:hover
            color $red

    ~/__home
        & ^[0]--title
            font-size 29px
            margin-bottom 45px
            max-width 690px

            @media screen and ( min-width $screen-sm )
                font-size 40px

            @media screen and ( min-width $screen-md )
                font-size 64px

        & ^[0]--description
            margin-bottom 60px
            max-width 450px

    ~/__blog
        text-transform uppercase

        & ^[0]--container
            width 440px

        & ^[0]--title
            @media screen and ( min-width $screen-sm )
                font-size 64px

        & ^[0]--subtitle
            font-size 44px
            font-weight 400
            line-height 1.1em
            margin-bottom 40px

            @media screen and ( min-width $screen-sm )
                font-size 70px
                margin 0 0 33px

    ~/__single
        & ^[0]--title
            color $white
            text-transform uppercase
            max-width 'calc( 100% - %s )' % ( $container-padding * 2 )

        & ^[0]--meta
            &--data
                display block
                margin-top 10px

                @media screen and ( min-width $screen-md )
                    display inline-block
                    margin-right 60px

                &__reading
                    icon( i-time )

                &__comments
                    color $white
                    icon( i-comments )
                    text-decoration none

                    &:hover
                        color $red

                        &:before
                            color $red

                &:before
                    display inline-block
                    color $tiffany
                    font-size 24px
                    vertical-align bottom

    ~/__about
        width 100%

        & ^[0]--container
            width 100%

        & ^[0]--title
            color $white
            font-size 50px
            font-weight 400
            text-align center

            strong
                color $tiffany
                font-weight 700
                white-space nowrap

// Breadcrumb
.breadcrumb
    color $gray-light
    list-style none
    margin 0
    padding 20px 0

    &--wrapper
        background $red
        position relative
        z-index 10

        /.single-post &
            background none

    &--item
        display inline

        &:after
            content '/'
            display inline-block
            margin 0 10px

        &:last-child:after
            display none

    &--link
        color $white
        text-decoration none
